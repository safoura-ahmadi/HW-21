    <title>Car Plate Input</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .plate-input {
            display: flex;
            align-items: center;
            border: 2px solid #ddd;
            border-radius: 8px;
            padding: 8px;
            max-width: 400px;
            background-color: #f9f9f9;
        }
        .plate-flag {
            width: 50px;
            height: 30px;
            background: url('https://upload.wikimedia.org/wikipedia/commons/thumb/5/5e/Flag_of_Iran.svg/1920px-Flag_of_Iran.svg.png') no-repeat center center;
            background-size: cover;
            border: 1px solid #ddd;
            border-radius: 4px;
            margin-right: 8px;
        }
        .plate-section {
            flex: 1;
            display: flex;
            gap: 4px;
        }
        .plate-input input {
            text-align: center;
            border: 1px solid #ddd;
            border-radius: 4px;
            padding: 4px;
        }
        .plate-input input:focus {
            outline: none;
            border-color: #0d6efd;
        }
        .vin-input {
            margin-top: 16px;
        }
    </style>
</head>
