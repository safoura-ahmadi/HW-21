@page
@model CarCheckup.EndPoints.RazorPage.Pages.CarModel.IndexModel
@{
}

<div class="table-responsive">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert"> @TempData["ErrorMessage"] </div>
    }
    <br />
    <a class="btn btn-primary" asp-page="Create">ایجاد مدل جدید</a>
    <hr />
    <table class="table table-hover ">
        <thead>
            <tr>
                <th>#</th>
                <th>نام مدل</th>
                <th>عملیات</th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 1;
            }
            @foreach (var carModel in Model.CarModels)
            {
                <tr>
                    <td>@i</td>
                    <td>@carModel.Name</td>
                    <td>
                        <a class="btn btn-warning btn-sm" asp-page="Update" asp-route-id="@carModel.Id">ویرایش</a>
                        <a class="btn btn-danger btn-sm" asp-page="Delete" asp-route-id="@carModel.Id">حذف</a>
                    </td>
                    @{i++;}
                    

                </tr>
            }
        </tbody>

    </table>
</div>
