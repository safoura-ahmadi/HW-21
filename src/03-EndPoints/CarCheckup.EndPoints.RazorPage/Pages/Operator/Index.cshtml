@page
@model CarCheckup.EndPoints.RazorPage.Pages.Operator.IndexModel
@{
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<div class="container px-5 my-5">
    <form method="post">
        <div class=" mb-3">
            <label asp-for="@Model.UserName" class="mb-1">نام کاربری</label>
            <input class="form-control" type="text" asp-for="@Model.UserName"  required />


        </div>
        <div class=" mb-3">
            <label asp-for="@Model.Password" class="mb-1">رمزعبور</label>
            <input class="form-control" type="password" asp-for="@Model.Password" required />


        </div>

        <div class="d-grid">
            <button class="btn btn-primary btn-lg" type="submit">ورود</button>
        </div>
    </form>
</div>
